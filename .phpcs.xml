<?xml version="1.0"?>
<ruleset>
	<rule ref="./vendor/mediawiki/mediawiki-codesniffer/MediaWiki">
		<exclude name="Generic.Arrays.DisallowLongArraySyntax" />
		<exclude name="Generic.CodeAnalysis.ForLoopWithTestFunctionCall" />
		<exclude name="Generic.Files.LineLength" />
		<exclude name="Generic.WhiteSpace.DisallowSpaceIndent.SpacesUsed" />
		<exclude name="MediaWiki.Commenting.FunctionAnnotations" />
		<exclude name="MediaWiki.Commenting.FunctionComment" />
		<exclude name="MediaWiki.Commenting.LicenseComment" />
		<exclude name="MediaWiki.ControlStructures.AssignmentInControlStructures" />
		<exclude name="MediaWiki.Files.ClassMatchesFilename" />
		<exclude name="MediaWiki.NamingConventions.PrefixedGlobalFunctions" />
		<exclude name="MediaWiki.Usage.DbrQueryUsage" />
		<exclude name="MediaWiki.Usage.DeprecatedConstantUsage" />
		<exclude name="MediaWiki.WhiteSpace.SpaceBeforeSingleLineComment" />
		<exclude name="PSR2.Classes.PropertyDeclaration" />
		<exclude name="Squiz.Scope.MemberVarScope" />
		<exclude name="Squiz.Scope.MethodScope" />
	</rule>
	<file>.</file>
	<arg name="extensions" value="php" />
	<arg name="encoding" value="UTF-8" />
</ruleset>
